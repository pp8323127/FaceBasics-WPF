        <Grid Grid.Row="1" Grid.Column="1" Background="White" Margin="0,0,-10,0" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Image Source="{Binding ImageSource}" Stretch="Uniform" />
            </Grid>

            <Grid Grid.Row="1" Margin="0 10 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Image x:Name="img_gender_boy" VerticalAlignment="Top" HorizontalAlignment="Left" Width="100" Height="100" Stretch="Uniform" Source="Images/boy.png" Visibility="Hidden"/>
                    <Image x:Name="img_gender_girl" VerticalAlignment="Top" HorizontalAlignment="Left" Width="100" Height="100" Stretch="Uniform" Source="Images/girl.png" Visibility="Hidden"/>
                </Grid>

                <Grid Grid.Column="1">
                    <Label x:Name="label" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" FontFamily="Microsoft JhengHei"/>
                </Grid>
            </Grid>

            <Grid Grid.Row="2">
                <Label x:Name="label3" Content="" FontSize="16" FontFamily="Microsoft JhengHei" />
            </Grid>

            <Grid Grid.Row="3" VerticalAlignment="Bottom">
                <Grid HorizontalAlignment="Left" Margin="30">
                    <Label x:Name="face_label" Margin="0 -30 0 0" Content=""  HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="18" FontFamily="Microsoft JhengHei"/>
                    <Image x:Name="faceIMG" Stretch="Uniform" Width="150" Height="150" VerticalAlignment="Bottom" Margin="0" />
                </Grid>
                <Grid HorizontalAlignment="Right" Margin="30">
                    <Label x:Name="clothes_label" Margin="0 -30 0 0" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="18" FontFamily="Microsoft JhengHei"/>
                    <Image x:Name="clothesIMG" Source="{Binding clothesSource}" Stretch="Uniform" Width="150" Height="150" VerticalAlignment="Bottom" Margin="0" />
                </Grid>
            </Grid>

        </Grid>




        <StatusBar Grid.Row="3" HorizontalAlignment="Stretch" Name="statusBar" VerticalAlignment="Bottom" Background="White" Foreground="{StaticResource MediumGreyBrush}">
            <StatusBarItem Content="{Binding StatusText}" />
        </StatusBar>
    </Grid>



</Window>
